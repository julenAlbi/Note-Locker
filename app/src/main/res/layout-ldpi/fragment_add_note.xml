<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.example.julen.nativeappsproject.model.Note"/>
        <variable
            name="noteViewModel"
            type="com.example.julen.nativeappsproject.note.NoteViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".note.AddNoteFragment">


        <LinearLayout
            android:id="@+id/linearLayoutNote"
            android:layout_width="match_parent"
            android:layout_height="371dp"
            android:layout_gravity="top"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/noteNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note name:" />

                <EditText
                    android:id="@+id/noteName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="@={noteViewModel.note.alias}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lockedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locked? " />

                <CheckBox
                    android:id="@+id/lockedCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@={noteViewModel.note.locked}" />
            </LinearLayout>

            <TextView
                android:id="@+id/writeYourNoteLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Write your note:" />

            <EditText
                android:id="@+id/noteTextEditing"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/back"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:text="@={noteViewModel.note.secret}" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutTranslate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/translateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingLeft="10dp"
                android:text="Translate:" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:checkedButton="@+id/esen">

                <RadioButton
                    android:id="@+id/esen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="@={noteViewModel.esen}"
                    android:text="es-en" />

                <RadioButton
                    android:id="@+id/enes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="@={noteViewModel.enes}"
                    android:text="en-es" />
            </RadioGroup>

            <Button
                android:id="@+id/translateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:onClick="@{noteViewModel::onTranslateButtonClicked}"
                android:text="Translate" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="@{noteViewModel.progressBarVisivility}"/>
    </FrameLayout>
</layout>
